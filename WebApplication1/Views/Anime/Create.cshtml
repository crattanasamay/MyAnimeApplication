@model Anime


<form method="post"> 
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Add Anime</h2>
            <hr/>
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Anime Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Season">Anime Season</label>
            <input asp-for="Season" class="form-control" />
            <span asp-validation-for="Season" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Summary">Anime Summary</label>
            <input asp-for="Summary" class="form-control" />
            <span asp-validation-for="Summary" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Add Anime</button>
        <a asp-controller="Anime" asp-action="Index" class="btn btn-secondary">Back to Anime</a>

    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
